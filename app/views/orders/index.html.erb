<h1>Listing Orders</h1>

<link rel="stylesheet" href="https://raw.github.com/cchike/cchike/master/app/assets/javascripts/TableSorter/themes/blue/style.css"> 
<script type="text/javascript" src="https://raw.github.com/cchike/cchike/master/app/assets/javascripts/TableSorter/jquery-latest.js"></script> 
<script type="text/javascript" src="https://raw.github.com/cchike/cchike/master/app/assets/javascripts/TableSorter/jquery.tablesorter.js"></script> 

<script>
	
	$(function() {
		$("#myTable").tablesorter({theme:'blue',widgets:['zebra'],widthFixed:true});
	});

</script>

<table id="myTable" class="tablesorter tablesorter-blue">
	<thead>
	  <tr class="tablesorter-headerRow">
	    <th>Customer Name</th>
	    <th>Customer Email</th>
	    <th>Id</th>
	    <th>Address</th>
	    <th>Contents</th>
	    <th>Status</th>
	    <th>Owner</th>
	    <th>Vendor</th>
	    <th>Ready For Pickup</th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>
	
	<tbody>
		<% @orders.each do |order| %>
		  <tr>
		    <td><%= order.customer_name %></td>
		    <td><%= order.customer_email %></td>
		    <td><%= order.id %></td>
		    <td><%= order.address %></td>
		    <td><%= order.contents %></td>
		    <td><%= order.status %></td>
		    <td><%= order.user.email %></td>
		    <td><%= order.vendor %></td>
		    <td><%= order.ready_for_pickup %></td>
		    <td><%= link_to 'Show', order, class: "btn btn-mini" %></td>
		    <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-mini"%></td>
		  </tr>
		<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Order', new_order_path, class: "btn btn-mini" %> <%= link_to 'Return Home', root_path, class: "btn btn-mini" %>
