<%= form_for(@order, html: {class: "form-horizontal"}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: "control-label" %><br />
    <div class="controls">
    	<%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :id, class: "control-label" %><br />
    <div class="controls">
    	<%= f.text_field :id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :location, class: "control-label" %><br />
    <div class="controls">
    	<%= f.text_field :location %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contents, class: "control-label" %><br />
    <div class="controls">
    	<%= f.text_field :contents %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, class: "control-label" %><br />
    <div class="controls">
    	<%= f.collection_select :status, ["Incoming","Outgoing","Completed"], :to_str, :to_str%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ordertype, class: "control-label" %><br />
    <div class="controls">
    	<%= f.text_field :ordertype %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, class: "control-label" %><br />
    <div>
    	<%= f.collection_select :user_id, User.all, :id, :email %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
